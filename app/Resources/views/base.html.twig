<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Teicar carroceries">
    <meta name="author" content="www.flux.cat">
    <title>{% block title %}Teicar carroceries{% endblock %}</title>
    {% block stylesheets %}
        {% stylesheets filter='cssrewrite,less' '@mycss' %}
        <link rel="stylesheet" type="text/css" href="{{ asset_url }}"/>
        {% endstylesheets %}
    {% endblock %}
    <link rel="icon" type="image/jpg" href="{{ asset('favicon.jpg') }}"/>
</head>
<body>
<div class="container layout">
    {% block body %}{% endblock %}
</div>
<footer>
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <address class="no-m-bottom">
                    Pol. Ind. Tosses C. Berlín, 1 · 43870 Amposta · Tarragona<br>
                    <span class="c-red"><i class="fa fa-phone" aria-hidden="true"></i> 977 70 18 68<br></span>
                    <a class="underlined" href="mailto:info@teicar.com">info@teicar.com</a><br><br>
                    <a href="https://www.facebook.com/teicarcarrosseries" target="_blank"><i class="fa fa-facebook-official fa-2x"></i></a>
                </address>
            </div>
        </div>
    </div>
</footer>
{% block javascripts %}
    {% javascripts '@myjs' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
{% if google_analytics_enabled %}
<script type="text/javascript">
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
    ga('create', '{{ google_analytics_account }}', 'auto');
    ga('send', 'pageview');
</script>
{% endif %}
</body>
</html>
